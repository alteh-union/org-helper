<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/array_argument_input_padding">

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/arrayInputChipGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <AutoCompleteTextView
        android:id="@+id/arrayInputTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/argument_edittext"
        android:imeOptions="actionNext"
        android:maxLines="1"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/arrayInputChipGroup"
        tools:ignore="LabelFor" />

</androidx.constraintlayout.widget.ConstraintLayout>